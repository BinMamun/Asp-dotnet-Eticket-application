@model IEnumerable<Producer>
@{
    ViewData["Title"] = "Index";
}

<div class="row container offset-1">
    <h3 class="mb-3 display-6 text-dark text-center">Producers List</h3>
    <hr />
    @await Html.PartialAsync("_CreateNew", "Producers")
    <div class="col-12 d-flex justify-content-center">
        <table class="table table-hover box-shadow table-borderless">
            <thead>
                <tr class="table-warning text-center">
                    <th class="">Profile Picture</th>
                    <th>Name</th>
                    <th>Biography</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                <tr class="text-center align-middle">
                    <td>
                        <img src="@p.ProfilePicture" width="50" class="rounded-circle img" />
                    </td>
                    <td>@p.ProducerName</td>
                    <td>@p.Biography</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Producers" asp-route-Id="@p.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-controller="Producers" asp-route-Id="@p.Id" class="btn btn-outline-info"><i class="bi bi-eye"></i></a>
                        <a asp-action="Delete" asp-controller="Producers" asp-route-Id="@p.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>