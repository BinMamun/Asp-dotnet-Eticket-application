@model Actor
@{
    ViewData["Title"] = "Actor Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1 class="display-6">Actor Details</h1>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-group">
                <div class="col-md-3 offset-3" style="margin-right: 30px;">
                    <img id="ProfilePicturePreview" class="imgPreview" />
                </div>
                <div class="col-md-10 mb-2">
                    <label asp-for="ProfilePicture" class="col-form-label"></label>
                    <input asp-for="ProfilePicture" class="form-control" placeholder="Profile Picture Url" readonly />
                </div>

                <div class="col-10 mb-2">
                    <label asp-for="ActorName" class="col-form-label"></label>
                    <input asp-for="ActorName" class="form-control" placeholder="Actor Name" readonly />
                </div>

                <div class="col-10 mb-2">
                    <label asp-for="Biography" class="col-form-label"></label>
                    <input asp-for="Biography" class="form-control" placeholder="Biography" readonly />
                </div>

                <div class="col-10">
                    <a class="btn btn-outline-secondary float-start" asp-action="Index">Back</a>
                    <a class="btn btn-outline-warning float-end" asp-action="Edit" asp-route-id="@Model.ActorId">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/libs/Jquery/jquery.js"></script>
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePicture").val();
        })
            //$("#ProfilePicture").on("change", function () {
            //    var output = document.getElementById('ProfilePicturePreview');
            //    output.src = $(this).val();
            //})
    </script>
}
