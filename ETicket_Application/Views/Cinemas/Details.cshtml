@model Cinema
@{
    ViewData["Title"] = "Cinema Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1 class="display-6">Details of <strong>@Model.Name</strong></h1>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-group">
                <div class="col-md-3 offset-3" style="margin-right: 30px;">
                    <img id="ProfilePicturePreview" class="imgPreview" />
                </div>
                <div class="col-md-10 mb-2" hidden>
                    <label asp-for="Logo" class="col-form-label"></label>
                    <input asp-for="Logo" class="form-control" placeholder="Profile Picture Url" readonly />
                </div>

                <div class="col-10 mb-2">
                    <label asp-for="Name" class="col-form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Producer Name" readonly />
                </div>

                <div class="col-10 mb-2">
                    <label asp-for="Description" class="col-form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="Description" readonly></textarea>
                </div>

                <div class="col-10">
                    <a class="btn btn-outline-secondary float-start" asp-action="Index">Back</a>
                    <a class="btn btn-outline-warning float-end" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/libs/Jquery/jquery.js"></script>
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#Logo").val();
        })
            //$("#Logo").on("change", function () {
            //    var output = document.getElementById('ProfilePicturePreview');
            //    output.src = $(this).val();
            //})
    </script>
}
