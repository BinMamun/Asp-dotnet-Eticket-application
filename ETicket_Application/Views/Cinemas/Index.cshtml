@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "Index";
}

<div class="row container offset-1">
    <h3 class="mb-3 display-6 text-dark text-center">Cinema List</h3>
    <hr />
    <div class="col-12 d-flex justify-content-end mb-2">
        <a asp-action="Create" asp-controller="Cinemas" class="btn btn-warning" title="Add new"><i class="bi bi-plus-square"></i></a>
    </div>
    <div class="col-12 d-flex justify-content-center">
        <table class="table table-hover box-shadow table-borderless">
            <thead>
                <tr class="table-warning text-center">
                    <th>Logo</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    <tr class="text-center align-middle">
                        <td>
                            <img src="@c.Logo" class="rounded-circle img" width="50" />
                        </td>
                        <td>@c.Name</td>
                        <td>@c.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Categories" asp-route-ActorId="@c.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Detail" asp-controller="Categories" asp-route-ActorId="@c.Id" class="btn btn-outline-info"><i class="bi bi-eye"></i></a>
                            <a asp-action="Delete" asp-controller="Categories" asp-route-ActorId="@c.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>